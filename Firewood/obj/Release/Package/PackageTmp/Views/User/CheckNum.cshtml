@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "学号验证 柴火 | 西南财经大学学生活动发布平台";
    ViewBag.Css = new string[]{
        "/Firewood/css/form.min.css"
    };
}
<div class="row fw-border form-style">
    <h3>学号验证</h3>
    <form class="form-horizontal" onsubmit="return false">
        <div class="form-group">
            <label class="col-sm-3 control-label">学号</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="usernum" required />
                <p class="help-block"></p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">上网密码</label>
            <div class="col-sm-9">
                <input type="password" class="form-control" id="webpwd" required />
                <p class="help-block"></p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <button type="submit" class="btn btn-warning btn-lg btn-block" id="user-check-btn">确定</button>
            </div>
        </div>
    </form>
</div>