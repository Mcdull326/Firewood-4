@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "完善个人信息 柴火 | 西南财经大学学生活动发布平台";
    ViewBag.Css = new string[]{
        "/Firewood/css/form.min.css"
    };
}

<div class="row fw-border form-style">
    <h3>完善个人信息</h3>
    <form class="form-horizontal" onsubmit="return false">
        <div class="form-group">
            <label class="col-sm-3 control-label">学号</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="re-num" disabled="disabled" value="@ViewBag.usernum" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">昵称</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" disabled="disabled" value="@ViewBag.username" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">邮箱</label>
            <div class="col-sm-9">
                <input type="email" class="form-control" id="re-mail" value="@ViewBag.usermail" required />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">手机号</label>
            <div class="col-sm-9">
                <input type="number" class="form-control" id="re-tel" value="@ViewBag.usertel" required />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">年级</label>
            <div class="col-sm-9">
                <input type="number" class="form-control" id="grade" value="@ViewBag.usergrade" required />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">性别</label>
            <div class="col-sm-9">
                @if (@ViewBag.usersex == null)
                {
                    <div class="radio">
                        <label>
                            <input type="radio" name="optionsRadios" id="male" value="male">男
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="optionsRadios" id="female" value="female">女
                        </label>
                    </div>
                }
                else if ((Int32)@ViewBag.usersex == 0)
                {
                    <div class="radio">
                        <label>
                            <input type="radio" name="optionsRadios" id="male" value="male" checked>男
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="optionsRadios" id="female" value="female">女
                        </label>
                    </div>
                }
                else if ((Int32)@ViewBag.usersex == 1)
                {
                    <div class="radio">
                        <label>
                            <input type="radio" name="optionsRadios" id="male" value="male">男
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="optionsRadios" id="female" value="female" checked>女
                        </label>
                    </div>
                }
                
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">真实姓名</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="truename" value="@ViewBag.truename" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <button type="submit" class="btn btn-warning btn-lg btn-block" id="user-center-btn">保存修改</button>
            </div>
        </div>
    </form>
</div>