@{
    Layout = "~/Views/Shared/Org_Layout.cshtml";
    ViewBag.Title = "社团/组织发布活动 柴火 | 西南财经大学学生活动发布平台";
    ViewBag.Css = new string[]{
        "/Firewood/css/form.min.css"
    };
    ViewBag.Js = new string[]{
        "/Firewood/js/Publish.js"
    };
}

<div class="row fw-border form-style">
    <h3>发布活动</h3>
    <form class="form-horizontal" action="/Firewood/Org/IsPublish" method="post" role="form" enctype="multipart/form-data">
        <div class="form-group">
            <label class="col-sm-3 control-label">活动名称</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="actname" required />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">活动地点</label>
            <div class="col-sm-9">
                <select class="form-control" name="place">
                    <option>800人厅</option>
                    <option>300人厅</option>
                    <option>视频会议厅</option>
                    <option>国际报告厅</option>
                    <option>音乐厅</option>
                    <option>教学楼</option>
                    <option>户外</option>
                    <option>其他</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">活动分类</label>
            <div class="col-sm-9">
                <div class="col-md-6" style="padding-left:0">
                    <select class="form-control" name="class1" id="class1">
                        <option>比赛</option>
                        <option>讲座</option>
                        <option>演出</option>
                        <option>聚会</option>
                        <option>公益</option>
                        <option>其他</option>
                    </select>
                </div>
                <div class="col-md-6" style="padding-right:0">
                    <select class="form-control" name="class2" id="class2"></select>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">开始时间</label>
            <div class="col-md-9">
                <input title="必填" name="begintime" class="pic-time form-control my-datepicker" type="text" placeholder="开始时间" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">结束时间</label>
            <div class="col-md-9">
                <input title="必填" name="endtime" class="pic-time form-control my-datepicker" type="text" placeholder="开始时间" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">是否有奖金</label>
            <div class="col-md-9">
                <div class="radio">
                    <label><input type="radio" name="money" value="yes">是</label>
                </div>
                <div class="radio">
                    <label><input type="radio" name="money" value="no">否</label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">是否有第二课堂学分</label>
            <div class="col-md-9">
                <div class="radio">
                    <label>
                        <input type="radio" name="score" value="yes">是
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="score" value="no">否
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">是否有加分</label>
            <div class="col-md-9">
                <div class="radio">
                    <label>
                        <input type="radio" name="award" value="yes">是
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="award" value="no">否
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3">是否需要投票</label>
            <div class="col-md-9">
                <div class="radio">
                    <label>
                        <input type="radio" name="vote" value="yes">是
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="vote" value="no">否
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">活动海报</label>
            <div class="col-sm-9">
                <input type="file" name="actpic" required />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">活动简介</label>
            <div class="col-sm-9">
                <textarea rows="10" type="text" class="form-control" name="actintro" placeholder="1000字以内" required maxlength="1000"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <button type="submit" class="btn btn-warning btn-lg btn-block" id="org-publish-btn">发布</button>
            </div>
        </div>
    </form>
</div>
